
<p class="lead mb-3 pt-3">Welcome <%= name %> </p>
<div class="row mt-5">
  <div class="card card-body">
    <!-- <div class="col-md-6 m-auto"> -->
      <h3 class="">Today's menu - </h3> <hr>
      <% for (let i=0; i<menu.length; i++){ %>
        <div class="formgroup">
      <img src="<%= menu[i].itemImage %>" alt="" height="50" width="50">
      <span class="lead mb-3 menu-items"> <%= menu[i].itemName %> - </span>
      <span class="lead mb-3 menu-items">â‚¹ <%= menu[i].itemPrice %></span>
      <button class="delItem btn btn-danger" value=<%= i %>>X</button>
    </div>
      <% } %>

      <script>
        // prevent form resubmission
        if ( window.history.replaceState ) {
        window.history.replaceState( null, null, window.location.href );
        }
        //Post call to delete item:
        let buttons = document.querySelectorAll(".delItem");
        for(let i=0; i<buttons.length; i++){
          buttons[i].addEventListener("click", function() {
            // console.log(buttons[i].value)     
              const response = fetch('/users/menu/del', {
                method: 'post',
                body: JSON.stringify({
                  value: buttons[i].value
                }),
                headers: { 'Content-Type': 'application/json' },
              });
              console.log('Completed!', response);
              // window.reload();
              // location.reload();

              //remove element fromm DOM
              let parentNode = buttons[i].parentNode;
              while (parentNode.firstChild) {
                parentNode.removeChild(parentNode.firstChild);
              }
              
            } 
        );
      }


      </script>

  
    </div>
      <div class="card card-body">
        <h1 class="text-center mb-3"><i class="fas fa-sign-in-alt"></i>  Menu</h1>
        <%- include("./partials/messages.ejs"); -%>
        <form action="/users/menu" method="POST" enctype="multipart/form-data">
          <div class="form-group">
            <label for="email">Item Name :</label>
            <input
              type="text"
              id="itemName"
              name="itemName"
              class="form-control"
              placeholder="Enter Item name..."
            />
          </div>
          <div class="form-group">
            <label for="password">Item Price :</label>
            <input
              type="number"
              id="itemPrice"
              name="itemPrice"
              class="form-control"
              placeholder="Enter Item price..."
            />
          </div>
          <div class="form-group">
            <label for="image">Image :</label>
            <input
              type="file"
              id="itemImage"
              name="itemImage"
              class="form-control"
            />
          </div>
          <button type="submit" class="btn btn-primary btn-block">Add Item</button>
        </form>
        <!-- <p class="lead mt-4">
          No Account? <a href="/users/register">Register</a>
        </p> -->
      </div>
    </div>
  </div>

