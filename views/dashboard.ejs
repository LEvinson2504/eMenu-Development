

<h1 class="mt-4">Dashboard</h1>
<p class="lead mb-3">Welcome <%= name %> </p>
<div class="card card-body">
    <!-- <div class="col-md-6 m-auto"> -->
      <p class="lead mb-3">Menu</p>
      <% for (let i=0; i<menu.length; i++){ %>
        <div class="formgroup">
      <span class="lead mb-3"> <%= menu[i].itemName %> - </span>
      <span class="lead mb-3">₹ <%= menu[i].itemPrice %></span>
    </div>
      <% } %>
    </div>

    <% menu.forEach((element, index) => { %>
      <div class="formgroup">
      <span class="lead mb-3"> <%= index %>. </span>
      <span class="lead mb-3"> <%= element.itemName %> - </span>
      <span class="lead mb-3">₹ <%= element.itemPrice %></span>
      <button onclick = "deleteItem(index)">X </button>
    </div>
    <% }) %>

    <script>
      function deleteItem(index) {
        console.log("function works");
        menu.splice(index, 1);
      };
    </script>

    
<a href="/users/logout" class="btn btn-secondary">Logout</a>
<a href="/users/menu" class="btn btn-primary">Add Menu</a>
